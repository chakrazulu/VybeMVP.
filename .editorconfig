# VybeMVP Editor Configuration
# Ensures consistent formatting across IDEs and platforms

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Swift files
[*.swift]
indent_style = space
indent_size = 4
max_line_length = 120

# JSON files (including KASPER MLX dataset)
[*.json]
indent_style = space
indent_size = 2

# YAML files (CI/workflows)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_style = space
indent_size = 2

# Xcode project files
[*.pbxproj]
indent_style = tab
indent_size = 4