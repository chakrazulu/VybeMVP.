rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: Allow unauthenticated access for testing
    // TODO: Integrate Firebase Auth with Sign in with Apple for production
    
    // Allow all access temporarily for development
    // TODO: Implement proper authentication rules before production
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for collections (for future use)
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /posts/{postId} {
      allow read, write: if true;
    }
    
    match /reactions/{reactionId} {
      allow read, write: if true;
    }
    
    match /comments/{commentId} {
      allow read, write: if true;
    }
  }
} 