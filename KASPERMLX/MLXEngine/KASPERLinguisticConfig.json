{
  "version": "2.1",
  "description": "KASPER V2.1 Natural Flow Enhancement - ChatGPT-5 Validated Improvements",

  "caps": {
    "whitelist": ["Divine", "Source", "Universe", "Creator", "God"],
    "lowercasePronouns": true,
    "comment": "Sacred terms that can remain capitalized mid-sentence"
  },

  "cadence": {
    "minTokens": 12,
    "maxTokens": 18,
    "maxCommas": 1,
    "maxSentences": 2,
    "optimalBreakpoint": 15,
    "overstuffedTriggers": ["while", "and", "as", "through", "with"],
    "maxConceptsPerSentence": 2,
    "followupMin": 6,
    "followupMax": 10,
    "sentenceLengthTargets": {
      "mobile": {"min": 8, "max": 15},
      "desktop": {"min": 12, "max": 22}
    },
    "comment": "Mobile-optimized sentence length with concept density control"
  },

  "repetition": {
    "windowTokens": 12,
    "maxRatio": 0.12,
    "stem": true,
    "lemmaWindow": 12,
    "banBigrams": true,
    "banAdjacentTrigrams": true,
    "customPairs": [["mystic","mystical"],["wisdom","knowing"],["nature","essence"],["spiritual","sacred"]],
    "functionWords": [
      "the", "a", "an", "and", "or", "but", "in", "on", "at", "to", "for",
      "of", "with", "by", "from", "up", "about", "into", "through", "during",
      "is", "are", "was", "were", "be", "been", "being", "have", "has", "had",
      "you", "your", "this", "that", "these", "those", "can", "will", "may"
    ],
    "comment": "12-token semantic window prevents word repetition with stemming"
  },

  "synonyms": {
    "mystic": ["mystical", "spiritual", "inner", "sacred", "divine"],
    "nature": ["essence", "spirit", "being", "true self", "authentic self", "soul"],
    "wisdom": ["insight", "knowing", "understanding", "awareness", "consciousness", "clarity", "discernment", "intuition"],
    "energy": ["force", "power", "essence", "vibration", "flow", "presence", "current", "pulse", "rhythm"],
    "spiritual": ["sacred", "divine", "mystical", "cosmic", "soulful", "transcendent"],
    "trust": ["embrace", "honor", "acknowledge", "welcome", "receive", "allow", "lean into", "rest in"],
    "path": ["journey", "way", "direction", "course", "unfolding", "progression"],
    "inner": ["internal", "deep", "core", "authentic", "true", "essential"],
    "authentic": ["genuine", "real", "true", "natural", "honest", "original"],
    "divine": ["sacred", "holy", "spiritual", "cosmic", "celestial", "transcendent"],
    "truth": ["reality", "authenticity", "essence", "core", "heart", "center", "depth"],
    "guidance": ["direction", "insight", "clarity", "wisdom", "knowing", "invitation"],
    "invited": ["called", "drawn", "encouraged", "guided", "moved", "inspired"],
    "align": ["harmonize", "attune", "sync", "connect", "merge", "unite"],
    "feel": ["sense", "notice", "experience", "recognize", "perceive", "become aware of"],
    "know": ["recognize", "understand", "realize", "sense", "perceive", "become clear about"],
    "find": ["discover", "uncover", "recognize", "encounter", "come upon", "reveal"],
    "see": ["notice", "observe", "recognize", "perceive", "become aware of", "witness"],
    "bring": ["offer", "provide", "deliver", "create", "generate", "foster"],
    "help": ["support", "assist", "guide", "encourage", "nurture", "facilitate"],
    "give": ["offer", "provide", "share", "contribute", "extend", "present"],
    "show": ["reveal", "demonstrate", "illustrate", "present", "display", "indicate"],
    "open": ["unlock", "reveal", "expose", "uncover", "access", "make available"],
    "create": ["generate", "produce", "develop", "cultivate", "foster", "build"],
    "peace": ["calm", "serenity", "tranquility", "stillness", "harmony", "balance"],
    "love": ["compassion", "care", "kindness", "warmth", "connection", "tenderness"],
    "strength": ["power", "resilience", "fortitude", "courage", "determination", "resolve"],
    "light": ["illumination", "clarity", "brightness", "radiance", "awareness", "understanding"],
    "journey": ["path", "way", "progression", "evolution", "unfolding", "adventure"],
    "growth": ["development", "expansion", "evolution", "progress", "transformation", "maturation"],
    "change": ["transformation", "shift", "evolution", "transition", "adjustment", "adaptation"]
  },

  "intensifiers": {
    "maxPerSentence": 1,
    "moderateList": ["deeply", "beautiful", "powerful", "amazing", "incredible", "profound"],
    "allowList": ["gently", "steadily", "naturally", "quietly", "simply", "softly"],
    "comment": "Prevent intensifier overload, promote gentle language"
  },

  "voice": {
    "disallow": [
      "reveals a beautiful opportunity to",
      "flows from your deepest knowing",
      "awakening of",
      "within your being reveals",
      "you are invited to",
      "trust in the",
      "while trusting",
      "as you align with"
    ],
    "replace": {
      "reveals a beautiful opportunity to": "opens the door to",
      "flows from your deepest spiritual knowing": "emerges naturally",
      "awakening of": "stirring of",
      "within your being reveals": "shows you",
      "you are invited to": "consider",
      "trust in the": "lean into",
      "while trusting": "knowing that",
      "as you align with": "when you honor"
    },
    "mechanicalConnectors": [
      "while", "as", "and", "through", "with", "by", "in order to"
    ],
    "naturalConnectors": [
      "because", "since", "when", "after", "before", "until", "knowing that"
    ],
    "sentenceStarters": {
      "imperative": ["Notice", "Feel", "Breathe", "Allow", "Let", "Take"],
      "reflective": ["Something in you", "Your heart", "The part of you that", "Right now"],
      "predictive": ["Soon", "In time", "Gradually", "As you continue"]
    },
    "comment": "Remove template seams and mechanical phrases, add natural variety"
  },

  "structuralVariation": {
    "enableMicroVariation": true,
    "sentenceFormPatterns": {
      "imperative": {
        "starters": ["Notice", "Feel", "Allow", "Breathe", "Take", "Let"],
        "weight": 0.3,
        "maxConsecutive": 1
      },
      "reflective": {
        "starters": ["Something in you", "Your heart", "The part of you that", "Right now"],
        "weight": 0.4,
        "maxConsecutive": 2
      },
      "predictive": {
        "starters": ["Soon", "In time", "Gradually", "As you continue"],
        "weight": 0.2,
        "maxConsecutive": 1
      },
      "present": {
        "starters": ["Here", "Now", "This moment", "Today"],
        "weight": 0.1,
        "maxConsecutive": 1
      }
    },
    "overstuffedDetection": {
      "maxConceptsPerSentence": 2,
      "breakTriggers": ["while", "and", "as", "through", "with", "during", "alongside"],
      "splitIntoShorter": true,
      "targetSentenceLength": {"min": 8, "max": 15}
    },
    "flowTransitions": {
      "gentle": ["softly", "quietly", "naturally", "gently"],
      "confident": ["clearly", "simply", "directly", "certainly"],
      "contemplative": ["slowly", "deeply", "thoughtfully", "carefully"]
    },
    "comment": "V2.1: Enhanced sentence structure variation with overstuffed phrase detection"
  },

  "safety": {
    "blockedTerms": ["guarantee", "guaranteed", "cure", "heal", "fix"],
    "ban": ["will", "must", "should", "have to"],
    "invite": ["can", "may", "consider", "invite"],
    "medicalTerms": ["diagnose", "treatment", "disease", "disorder", "syndrome", "condition"],
    "financialTerms": ["money", "wealth", "rich", "investment", "profit", "cash"],
    "replacements": {
      "will": "can",
      "must": "might",
      "should": "can",
      "guarantee": "invite",
      "cure": "support",
      "fix": "support"
    },
    "comment": "Maintain spiritual focus, avoid medical/financial claims"
  },

  "actionVerbs": {
    "required": true,
    "list": [
      "breathe", "notice", "feel", "sense", "observe", "allow", "welcome",
      "receive", "open", "step", "align", "ground", "center", "pause",
      "soften", "release", "embrace", "trust", "honor", "acknowledge"
    ],
    "groundingPhrases": [
      "Take one slow breath and notice where this lands in your body",
      "Pause and feel how this resonates within you",
      "Breathe gently and allow this wisdom to settle",
      "Notice what shifts as you welcome this insight",
      "Let this truth ground itself in your awareness"
    ],
    "comment": "Ensure concrete sensory anchoring in all insights"
  },

  "personas": {
    "oracle": {
      "mysticalTerms": ["mystical", "cosmic", "divine", "sacred", "spiritual", "universe"],
      "voiceMarkers": ["ancient wisdom", "cosmic truth", "sacred knowing", "divine flow"],
      "sentencePatterns": ["The cosmos whispers", "Sacred energy reveals", "Divine truth shows"],
      "replacements": {
        "understand": "sense",
        "realize": "recognize",
        "discover": "unveil",
        "learn": "remember",
        "see": "perceive",
        "know": "feel in your bones",
        "you should": "the stars suggest",
        "it's time": "the moment has arrived"
      },
      "maxMetaphors": 1,
      "avoidProphecy": true,
      "comment": "Warm mystical wisdom without future predictions"
    },

    "psychologist": {
      "cognitiveVerbs": ["notice", "observe", "recognize", "acknowledge", "label", "reframe"],
      "replacements": {
        "mystical": "internal",
        "cosmic": "deep",
        "divine": "authentic",
        "sacred": "meaningful",
        "feel": "notice",
        "sense": "observe"
      },
      "avoidWoo": ["mystical", "cosmic", "divine", "sacred", "magical"],
      "comment": "Evidence-based language, cognitive clarity"
    },

    "mindfulnessCoach": {
      "bodyTerms": ["breath", "breathe", "body", "sensation", "ground", "center"],
      "presentTenseOnly": true,
      "voiceMarkers": ["right now", "in this moment", "feel your breath", "notice the sensation"],
      "sentencePatterns": ["Take one breath and", "Right now, feel", "In this moment"],
      "replacements": {
        "will be": "is",
        "will feel": "feels",
        "will bring": "brings",
        "you can trust": "you trust",
        "you might notice": "you notice",
        "you should": "you can",
        "consider": "notice what happens when you"
      },
      "requireBodyAwareness": true,
      "comment": "Present-moment awareness with embodied grounding"
    },

    "numerologyScholar": {
      "academicTerms": ["pattern", "indicates", "suggests", "structure", "system", "configuration"],
      "voiceMarkers": ["research shows", "patterns indicate", "evidence suggests", "historically"],
      "sentencePatterns": ["The numbers reveal", "Patterns indicate", "Systems show"],
      "replacements": {
        "mystical": "systematic",
        "cosmic": "numerical",
        "divine": "precise",
        "magical": "mathematical",
        "feel": "observe",
        "sense": "calculate"
      },
      "requireFactualBasis": true,
      "practicalApplication": true,
      "avoidWoo": ["mystical", "cosmic", "divine", "magical", "enchanted"],
      "comment": "Academic precision with practical guidance and evidence-based language"
    },

    "philosopher": {
      "contrastPairs": [
        ["freedom", "responsibility"],
        ["wisdom", "humility"],
        ["strength", "gentleness"],
        ["knowing", "mystery"],
        ["action", "patience"],
        ["certainty", "wonder"],
        ["depth", "simplicity"]
      ],
      "voiceMarkers": ["perhaps", "consider that", "one might say", "the paradox reveals"],
      "sentencePatterns": ["Consider how", "Perhaps this reveals", "The paradox shows"],
      "abstractConcepts": ["truth", "meaning", "essence", "being", "existence"],
      "replacements": {
        "you should": "one might consider",
        "you must": "perhaps you could",
        "definitely": "perhaps",
        "always": "often",
        "never": "rarely"
      },
      "maxContrasts": 1,
      "requireNuance": true,
      "comment": "Abstract wisdom with dialectical thinking and philosophical nuance"
    }
  },

  "emoji": {
    "maxPerCard": 1,
    "position": "leading",
    "allowed": ["ðŸŒŸ", "ðŸ”®", "ðŸ’«", "ðŸŒ™", "âœ¨", "âš¡", "ðŸŽ¯", "ðŸš€", "ðŸ’Ž", "ðŸŒŠ"],
    "comment": "Single leading emoji, no mid-sentence sprinkles"
  },

  "typography": {
    "singleSpaceAfterPeriod": true,
    "noEllipses": true,
    "maxEmDashesPerInsight": 1,
    "punctuationRules": {
      "maxCommasPerSentence": 1,
      "preferCoordinating": ["and", "so", "while", "as"]
    },
    "comment": "Clean, professional typography standards"
  },

  "qualityGates": {
    "minScore": 0.84,
    "weights": {
      "readability": 0.20,
      "repetition": 0.20,
      "cadence": 0.15,
      "variety": 0.15,
      "personaAdherence": 0.15,
      "safety": 0.15
    },
    "readabilityTarget": {
      "minFleschScore": 60,
      "maxFleschScore": 80,
      "gradeLevel": "6.0-9.0"
    },
    "repetitionTarget": 0.62,
    "varietyTarget": 0.8,
    "safetyRequired": 1.0,
    "comment": "Objective quality measurement for A/B testing"
  },

  "performance": {
    "maxLatencyMs": 3,
    "cacheSize": 1000,
    "telemetryEnabled": true,
    "comment": "On-device performance requirements"
  },

  "abTesting": {
    "enabled": true,
    "trafficSplit": 0.2,
    "successMetrics": {
      "thumbsUpIncrease": 0.15,
      "repetitionReduction": 0.30,
      "safetyMaintenance": 1.0
    },
    "comment": "Production rollout configuration"
  }
}
